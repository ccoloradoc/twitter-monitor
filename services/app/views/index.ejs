<html>
  <head>
    <title>TM</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
      .scrollable {
        max-height: calc(100vh - 6rem);
        overflow-y: scroll;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
      <a class="navbar-brand" href="/">
        <img alt="TwitterStream" style="max-height: 35px;" src="http://upload.wikimedia.org/wikipedia/en/2/2d/SRU-Logo-Transparent.png"> <span>TwitterStream</span>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        <!--   <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              LXIII
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="/camara-de-diputados/LXIII">Resumen</a>
              <a class="dropdown-item" href="/camara-de-diputados/LXIII/asistencias">Asistencias</a>
            </div>
          </li> -->
          <li class="nav-item active">
            <a class="nav-link" href="/nosotros">Nosotros</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid pt-3">
      <div class="row">
        <div class="col-sm-4">
          <ul class="list-group scrollable">
            <a class="list-group-item list-group-item-action text-light bg-dark" href="/">TwitterStream</a>
            <% terms.forEach((term, index) => { %>
              <a class="list-group-item list-group-item-action <%- term.name === selected ? 'active' : '' %>" href="/term/<%- term.name ? term.name.replace('#','') : 'NA'%>">
                <%- index + 1 %>) <span class=""><%- term.name %></span>
                <span class=" float-right badge <%- term.references > 0 ? 'badge-success' : 'badge-secondary' %> "><%- term.references %></span>
              </a>
            <% }) %>
          </ul>
        </div>
        <div class="col-sm-8">
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>User</th>
                <th>Fw/fr</th>
                <th>Fw/S</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%
                tweets.forEach( tweet => {
                  let created = new Date(tweet.data.user.created_at);
                %>
                <tr>
                  <td>
                    <img class="rounded" src="<%- tweet.data.user.profile_image_url_https %>"/>
                  </td>
                  <td>
                    <a href="https://twitter.com/<%- tweet.data.user.screen_name %>" target="_blank" class="font-weight-bold">@<%- tweet.data.user.screen_name %></a> &nbsp;
                    <span class="font-italic" style="font-size: small;"><i class="fa fa-calendar-o" aria-hidden="true"></i> <%- created.getMonth() + 1 %>/<%- created.getFullYear() %></span> &nbsp;
                    <a href="https://twitter.com/<%- tweet.data.user.screen_name %>/status/<%- tweet.data.id_str %>" target="_blank"><i class="fa fa-external-link"></i></a>
                    <span class="d-block font-weight-light text-justify" style="font-size: 14px;"><%- tweet.data.truncated ? tweet.data.extended_tweet.full_text : tweet.data.text %></span>
                  </td>
                  <td><%- (tweet.data.user.followers_count / tweet.data.user.friends_count).toFixed(2); %></td>
                  <td><%- (tweet.data.user.followers_count / tweet.data.user.statuses_count).toFixed(2); %></td>
                  <td>
                    <span class="d-block">S:<%- tweet.data.user.statuses_count %></span>
                    <span class="d-block">Fw:<%- tweet.data.user.followers_count %> </span>
                    <span class="d-block">fr: <%- tweet.data.user.friends_count %></span>
                  </td>
                </tr>
              <% }) %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="6">
                  <%
                    offset = parseInt(offset);
                    limit = parseInt(limit);
                    count = parseInt(count);
                  %>
                  <nav>
                    <ul class="pagination">
                      <li class="page-item <%- offset == 0 ? 'disabled' : '' %>">
                        <a class="page-link" href="?offset=<%- offset - limit %>&limit=<%- limit%>">Previous</a>
                      </li>
                      <% for(var i = offset; i < offset + (10 * limit) && i < count ; i += limit) { %>
                        <li class="page-item"><a class="page-link" href="?offset=<%- i%>&limit=<%- limit%>"><%- i/limit %></a></li>
                      <% } %>
                      <li class="page-item <%- offset + limit > count ? 'disabled' : '' %>">
                        <a class="page-link" href="?offset=<%- offset + limit %>&limit=<%- limit%>" tabindex="-1">Next</a>
                      </li>
                    </ul>
                  </nav>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
